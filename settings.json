// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "colorize_brackets": true,
  "completions": {
    "words_min_length": 4,
  },
  "snippet_sort_order": "inline",
  "sticky_scroll": {
    "enabled": true,
  },
  "vertical_scroll_margin": 10.0,
  "scroll_beyond_last_line": "vertical_scroll_margin",
  "which_key": {
    "delay_ms": 0,
    "enabled": true,
  },
  "buffer_font_weight": 350.0,
  "buffer_line_height": {
    "custom": 1.25,
  },
  "icon_theme": "VSCode Icons for Zed (Dark)",
  "redact_private_values": true,
  "collaboration_panel": {
    "dock": "right",
  },
  "outline_panel": {
    "dock": "right",
  },
  "git_panel": {
    "dock": "right",
  },
  "project_panel": {
    "dock": "right",
  },
  "lsp_document_colors": "inlay",
  "inlay_hints": {
    "show_value_hints": true,
    "show_type_hints": true,
    "show_background": false,
    "show_parameter_hints": true,
    "enabled": false,
  },
  "disable_ai": true,
  "show_edit_predictions": true,
  "indent_guides": {
    "background_coloring": "indent_aware",
    "coloring": "indent_aware",
  },
  "toolbar": {
    "selections_menu": true,
    "quick_actions": false,
    "breadcrumbs": false,
  },
  "rounded_selection": false,
  "current_line_highlight": "none",
  "ui_font_weight": 370.0,
  "ui_font_family": "Cascadia Code",

  "buffer_font_features": {
    "calt": true,
  },

  "diagnostics": {
    "inline": {
      "enabled": true,
      "update_debounce_ms": 0,
    },
  },

  "vim_mode": true,
  "telemetry": {
    "diagnostics": false,
    "metrics": false,
  },
  "base_keymap": "VSCode",
  "relative_line_numbers": "enabled",
  "gutter": {
    "min_line_number_digits": 2,
    "line_numbers": true,
  },
  "minimap": {
    "show": "never",
  },
  "hover_popover_delay": 200,
  "autosave": {
    "after_delay": {
      "milliseconds": 300,
    },
  },
  "buffer_font_fallbacks": ["Consolas", "Courier New"],
  "buffer_font_family": "Cascadia Code",
  "file_types": {},
  "show_whitespaces": "all",
  "ui_font_size": 15.0,
  "buffer_font_size": 15.0,
  "theme": "One Dark Pro",
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "check": {
          "command": "clippy",
        },
      },
    },
  },
}
