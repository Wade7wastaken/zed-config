// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "(VimControl && !menu)",
    "bindings": {
      "ctrl-u": [
        "action::Sequence",
        ["vim::ScrollUp", "editor::ScrollCursorCenter"],
      ],
      "ctrl-d": [
        "action::Sequence",
        ["vim::ScrollDown", "editor::ScrollCursorCenter"],
      ],
      "space p": "editor::Format",
      "alt-q": "vim::Rewrap",
      "shift-j": "editor::MoveLineDown",
      "shift-k": "editor::MoveLineUp",
      "space a": "editor::ToggleCodeActions",
      "space d": "editor::ToggleSelectedDiffHunks",
      "space f": "file_finder::Toggle",
      "space q": "pane::CloseActiveItem",
    },
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-e": "project_panel::ToggleFocus",
      "ctrl-h": "pane::ActivatePreviousItem",
      "ctrl-l": "pane::ActivateNextItem",
      "ctrl-shift-h": "pane::SwapItemLeft",
      "ctrl-shift-l": "pane::SwapItemRight",
      "alt-h": "workspace::ActivatePaneLeft",
      "alt-l": "workspace::ActivatePaneRight",
      "alt-j": "workspace::ActivatePaneDown",
      "alt-k": "workspace::ActivatePaneUp",
      "alt-shift-h": "workspace::MovePaneLeft",
      "alt-shift-l": "workspace::MovePaneRight",
      "alt-shift-j": "workspace::MovePaneDown",
      "alt-shift-k": "workspace::MovePaneUp",
    },
  },
  {
    "context": "Pane",
    "bindings": {
      "ctrl-e": "project_panel::ToggleFocus",
      "ctrl-h": "pane::ActivatePreviousItem",
      "ctrl-l": "pane::ActivateNextItem",
      "ctrl-shift-h": "pane::SwapItemLeft",
      "ctrl-shift-l": "pane::SwapItemRight",
      "alt-h": "workspace::ActivatePaneLeft",
      "alt-l": "workspace::ActivatePaneRight",
      "alt-j": "workspace::ActivatePaneDown",
      "alt-k": "workspace::ActivatePaneUp",
      "alt-shift-h": "workspace::MovePaneLeft",
      "alt-shift-l": "workspace::MovePaneRight",
      "alt-shift-j": "workspace::MovePaneDown",
      "alt-shift-k": "workspace::MovePaneUp",
    },
  },
  {
    "context": "ProjectPanel && not_editing",
    "bindings": {
      "ctrl-e": "workspace::ToggleRightDock",
    },
  },
  {
    "context": "vim_mode == visual && !menu",
    "bindings": {
      ">": ["action::Sequence", ["vim::Indent", "vim::RestoreVisualSelection"]],
      "<": [
        "action::Sequence",
        ["vim::Outdent", "vim::RestoreVisualSelection"],
      ],
    },
  },
  {
    "context": "(ProjectPanel && not_editing)",
    "bindings": {
      "n": "project_panel::NewFile",
      "shift-n": "project_panel::NewDirectory",
      "d": "project_panel::Delete",
      "r": "project_panel::Rename",
    }
  },
]
